                                            <TextField fx:id="timeTextField7" layoutX="300.0" layoutY="114.0" prefHeight="26.0" prefWidth="88.0" />
                                            <TextField fx:id="timeTextField8" layoutX="470.0" layoutY="114.0" prefHeight="26.0" prefWidth="88.0" />
                                            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="227.0" layoutY="70.0" prefHeight="17.0" prefWidth="58.0" text="年" />
                                            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="401.0" layoutY="70.0" prefHeight="17.0" prefWidth="58.0" text="月" />
                                            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="580.0" layoutY="70.0" prefHeight="17.0" prefWidth="58.0" text="日" />
                                            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="227.0" layoutY="119.0" prefHeight="17.0" prefWidth="58.0" text="时" />
                                            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="401.0" layoutY="119.0" prefHeight="17.0" prefWidth="58.0" text="分" />
                                            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="580.0" layoutY="119.0" prefHeight="17.0" prefWidth="58.0" text="秒" />
                                            <ChoiceBox fx:id="timeOperationType" layoutX="294.0" layoutY="14.0" prefWidth="150.0" />
                                            <Button layoutX="332.0" layoutY="169.0" mnemonicParsing="false" onAction="#onTimeOperate" prefWidth="75.0" text="操作" />
                                        </children>
                                    </AnchorPane>
                                </content>
                            </TitledPane>
                            <Button layoutX="580.0" layoutY="44.0" mnemonicParsing="false" onAction="#onTimeReset" prefWidth="75.0" text="重置" />
                     <Label alignment="CENTER" contentDisplay="CENTER" layoutX="118.0" layoutY="65.0" prefHeight="17.0" prefWidth="106.0" text="现在（毫秒）：" />
                     <TextField fx:id="nowTimestampMs" layoutX="255.0" layoutY="61.0" prefHeight="26.0" prefWidth="230.0" />
                     <ChoiceBox fx:id="secondTypeChoiceBox" layoutX="315.0" layoutY="123.0" prefHeight="26.0" prefWidth="110.0" />
                     <Button layoutX="503.0" layoutY="44.0" mnemonicParsing="false" onAction="#onRefreshTimestamp" prefWidth="75.0" text="刷新" />
                        </children>
                    </AnchorPane>
                </content>
            </Tab>
        </tabs>
    </TabPane>
    <AnchorPane prefHeight="0.0" prefWidth="740.0">
        <children>
            <Label layoutX="585.0" layoutY="5.0" text="Language:" />
            <ChoiceBox fx:id="languageSelector" layoutX="652.0" onAction="#switchLanguage" prefHeight="26.0" prefWidth="88.0" />
            <Label alignment="CENTER" layoutX="349.0" layoutY="5.0" text="ZZHow" />
            <Button fx:id="Button4" mnemonicParsing="false" onAction="#onAbout" text="关于" />
        </children>
    </AnchorPane>
</VBox>
