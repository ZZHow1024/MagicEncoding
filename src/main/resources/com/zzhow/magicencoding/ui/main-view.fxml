<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zzhow.magicencoding.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane onDragOver="#handleDragOver" onDragDropped="#onDragFile" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: rgba(0, 0, 0, 0.1);">
        <children>
            <Button layoutX="492.0" layoutY="46.0" onAction="#onReset" text="重置" />
            <Button layoutX="479.0" layoutY="92.0" onAction="#onFindFiles" text="查找文件" />
            <Button layoutX="479.0" layoutY="136.0" mnemonicParsing="false" onAction="#onTransform" text="开始转换" />
            <TextField fx:id="pathTextField" layoutX="134.0" layoutY="46.0" prefHeight="26.0" prefWidth="333.0" />
            <TextField fx:id="endWithTextField" layoutX="168.0" layoutY="92.0" prefHeight="26.0" prefWidth="240.0" />
            <Label layoutX="82.0" layoutY="50.0" text="路径" />
            <Label layoutX="82.0" layoutY="95.0" text="下后缀名为" />
            <Label layoutX="428.0" layoutY="97.0" text="的文件" />
            <Label layoutX="82.0" layoutY="140.0" text="从" />
            <Label layoutX="287.0" layoutY="141.0" text="转为" />
            <ChoiceBox fx:id="originChoiceBox" layoutX="173.0" layoutY="136.0" prefHeight="26.0" prefWidth="69.0" />
            <ChoiceBox fx:id="targetChoiceBox" layoutX="359.0" layoutY="136.0" prefHeight="26.0" prefWidth="69.0" />
         <Label layoutX="153.0" layoutY="14.0" text="可将文件夹拖拽至灰色区域，多个后缀名可用&amp;分隔" />
        </children>
    </AnchorPane>
    <AnchorPane prefHeight="199.0" prefWidth="600.0">
        <children>
            <Label layoutX="14.0" layoutY="6.0" text="命中的文件：" />
            <ListView fx:id="filesListView" layoutY="31.0" prefHeight="178.0" prefWidth="600.0" />
            <Button layoutX="279.0" layoutY="1.0" mnemonicParsing="false" onAction="#onAbout" text="关于" />
         <Label fx:id="fileNumber" layoutX="21.0" layoutY="213.0" text="文件数目：0" />
        </children>
    </AnchorPane>
    <Label alignment="CENTER" text="ZZHow" />
</VBox>
