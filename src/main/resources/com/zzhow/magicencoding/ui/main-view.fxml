<VBox alignment="CENTER" prefHeight="596.0" prefWidth="780.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zzhow.magicencoding.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TabPane fx:id="tabPane" prefHeight="519.0" prefWidth="858.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab onSelectionChanged="#onTabPaneClicked" text="字符文件">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="405.0" prefWidth="690.0">
                        <children>
                            <AnchorPane onDragDropped="#onDragFile" onDragOver="#handleDragOver" prefHeight="272.0" prefWidth="740.0" style="-fx-background-color: rgba(0, 0, 0, 0.1);">
                                <children>
                                    <Button fx:id="Button1" layoutX="636.0" layoutY="50.0" onAction="#onReset" text="重置" />
                                    <Button fx:id="Button2" layoutX="636.0" layoutY="100.0" onAction="#onFindFiles" text="查找文件" />
                                    <Button fx:id="Button3" layoutX="636.0" layoutY="150.0" mnemonicParsing="false" onAction="#onTransform" text="开始转换" />
                                    <TextField fx:id="pathTextField" layoutX="204.0" layoutY="50.0" prefHeight="26.0" prefWidth="333.0" />
                                    <TextField fx:id="endWithTextField" layoutX="276.0" layoutY="100.0" prefHeight="26.0" prefWidth="188.0" />
                                    <Label fx:id="Label1" alignment="CENTER" contentDisplay="CENTER" layoutX="40.0" layoutY="14.0" prefHeight="17.0" prefWidth="660.0" text="将文件夹或文件拖拽至灰色区域以获取路径，多个后缀名可用&amp;分隔" />
