            <ChoiceBox fx:id="originChoiceBox" layoutX="165.0" layoutY="139.0" prefHeight="26.0" prefWidth="120.0" />
            <ChoiceBox fx:id="targetChoiceBox" layoutX="378.0" layoutY="139.0" prefHeight="26.0" prefWidth="120.0" />
            <CheckBox fx:id="isOverwriteCheckBox" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" layoutX="240.0" layoutY="181.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="181.0" selected="true" style="-fx-graphic-text-gap: 2px;" text="覆盖原文件" textAlignment="CENTER" />
        </children>
    </AnchorPane>
    <AnchorPane prefHeight="199.0" prefWidth="600.0">
        <children>
            <Label fx:id="Label6" layoutX="19.0" layoutY="4.0" text="命中的文件：" />
            <Label fx:id="Label7" layoutX="22.0" layoutY="211.0" text="文件数目：0" />
