    </padding>
    <AnchorPane onDragDropped="#onDragFile" onDragOver="#handleDragOver" prefHeight="272.0" prefWidth="660.0" style="-fx-background-color: rgba(0, 0, 0, 0.1);">
        <children>
            <Button fx:id="Button1" layoutX="527.0" layoutY="46.0" onAction="#onReset" text="重置" />
            <Button fx:id="Button2" layoutX="527.0" layoutY="94.0" onAction="#onFindFiles" text="查找文件" />
            <Button fx:id="Button3" layoutX="527.0" layoutY="137.0" mnemonicParsing="false" onAction="#onTransform" text="开始转换" />
            <TextField fx:id="pathTextField" layoutX="165.0" layoutY="47.0" prefHeight="26.0" prefWidth="333.0" />
            <TextField fx:id="endWithTextField" layoutX="237.0" layoutY="93.0" prefHeight="26.0" prefWidth="188.0" />
            <Label fx:id="Label1" alignment="CENTER" contentDisplay="CENTER" layoutY="14.0" prefHeight="17.0" prefWidth="660.0" text="将文件夹或文件拖拽至灰色区域以获取路径，多个后缀名可用&amp;分隔" />
