                                            <TextField fx:id="timeTextField3" layoutX="130.0" layoutY="65.0" prefHeight="26.0" prefWidth="88.0" />
                                            <TextField fx:id="timeTextField4" layoutX="300.0" layoutY="65.0" prefHeight="26.0" prefWidth="88.0" />
                                            <TextField fx:id="timeTextField5" layoutX="470.0" layoutY="65.0" prefHeight="26.0" prefWidth="88.0" />
