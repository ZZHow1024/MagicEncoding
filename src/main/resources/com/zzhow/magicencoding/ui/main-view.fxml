                                    <Label fx:id="Label3" layoutX="60.0" layoutY="100.0" text="后缀名：" />
                                    <Label fx:id="Label4" layoutX="60.0" layoutY="150.0" text="字符集：" />
                                    <Label fx:id="Label5" alignment="CENTER" contentDisplay="CENTER" layoutX="364.0" layoutY="150.0" text="→" />
                                    <ChoiceBox fx:id="originChoiceBox" layoutX="216.0" layoutY="150.0" prefHeight="26.0" prefWidth="120.0" />
                                    <ChoiceBox fx:id="targetChoiceBox" layoutX="404.0" layoutY="150.0" prefHeight="26.0" prefWidth="120.0" />
                                    <CheckBox fx:id="isOverwriteCheckBox" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" layoutX="280.0" layoutY="198.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="181.0" selected="true" style="-fx-graphic-text-gap: 2px;" text="覆盖原文件" textAlignment="CENTER" />
                                </children>
                            </AnchorPane>
                            <AnchorPane layoutY="254.0" prefHeight="234.0" prefWidth="740.0">
                                <children>
                                    <Label fx:id="Label6" layoutX="20.0" layoutY="-5.0" text="命中的文件：" />
                                    <Label fx:id="Label7" layoutX="22.0" layoutY="211.0" text="文件数目：0" />
                                    <ListView fx:id="filesListView" layoutY="17.0" prefHeight="186.0" prefWidth="740.0" />
                                </children>
                            </AnchorPane>
                        </children>
                    </AnchorPane>
                </content>
            </Tab>
            <Tab onSelectionChanged="#onTabPaneClicked" text="字符文本">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <children>
                            <TabPane fx:id="textTabPane" onMouseClicked="#onTextTabPaneClicked" prefHeight="481.0" prefWidth="740.0" tabClosingPolicy="UNAVAILABLE">
                                <tabs>
                                    <Tab text="Unicode" />
                                    <Tab text="URL" />
                                </tabs>
                            </TabPane>
                            <AnchorPane layoutY="30.0" prefHeight="423.0" prefWidth="740.0" style="-fx-background-color: rgba(0, 0, 0, 0.1);">
                                <children>
                                    <TextArea fx:id="decodingText" prefHeight="200.0" prefWidth="740.0" promptText="文本内容" />
                                    <TextArea fx:id="encodingText" layoutY="250.0" prefHeight="194.0" prefWidth="740.0" promptText="Unicode" />
                                    <Button layoutX="250.0" layoutY="213.0" mnemonicParsing="false" onAction="#onDecodeText" prefWidth="80.0" text="↑" />
                                    <Button layoutX="410.0" layoutY="213.0" mnemonicParsing="false" onAction="#onEncodeText" prefWidth="80.0" text="↓" />
                                    <Label fx:id="urlCharsetText" alignment="CENTER" contentDisplay="CENTER" layoutX="500.0" layoutY="218.0" prefHeight="17.0" prefWidth="70.0" text="字符集：" visible="false" />
                                    <ChoiceBox fx:id="urlCharset" layoutX="570.0" layoutY="214.0" prefHeight="26.0" prefWidth="80.0" visible="false" />
                                    <Button layoutX="330.0" layoutY="213.0" mnemonicParsing="false" onAction="#onTextReset" prefWidth="80.0" text="重置" />
                                </children>
                            </AnchorPane>
                        </children>
                    </AnchorPane>
                </content>
            </Tab>
            <Tab onSelectionChanged="#onTabPaneClicked" text="Unix时间戳">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: rgba(0, 0, 0, 0.1);">
                        <children>
                            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="118.0" layoutY="30.0" prefHeight="17.0" prefWidth="106.0" text="现在（秒）：" />
                            <TextField fx:id="nowTimestampS" layoutX="255.0" layoutY="26.0" prefHeight="26.0" prefWidth="230.0" />
                            <TextField fx:id="timeTextField1" layoutX="85.0" layoutY="123.0" prefHeight="26.0" prefWidth="230.0" />
                            <Button layoutX="352.0" layoutY="97.0" mnemonicParsing="false" onAction="#onTimestampToTime" text="--&gt;" />
                            <Button layoutX="352.0" layoutY="149.0" mnemonicParsing="false" onAction="#onTimeToTimestamp" text="&lt;--" />
                            <TextField fx:id="timeTextField2" layoutX="425.0" layoutY="123.0" prefHeight="26.0" prefWidth="230.0" />
                            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="163.0" layoutY="167.0" prefHeight="17.0" prefWidth="74.0" text="时间戳" />
