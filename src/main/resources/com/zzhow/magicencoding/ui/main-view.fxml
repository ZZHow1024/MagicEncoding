            <Button fx:id="Button4" layoutX="309.0" layoutY="-10.0" mnemonicParsing="false" onAction="#onAbout" text="关于" />
            <Label layoutX="484.0" layoutY="213.0" text="Language:" />
            <ChoiceBox fx:id="languageSelector" layoutX="557.0" layoutY="208.0" onAction="#switchLanguage" prefHeight="26.0" prefWidth="88.0" />
        </children>
    </AnchorPane>
    <Label alignment="CENTER" text="ZZHow" />
</VBox>
